{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": [
    "./hardhat.config.ts",
    "./tasks/**/*.ts",
    "./scripts/**/*.ts",
    "./helpers/**/*.ts"
  ],
  "exclude": [
    "./test/**/*.ts"
  ]
}
